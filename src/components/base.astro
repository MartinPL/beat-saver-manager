---
import Header from "../components/header/header.astro"
import Footer from "../components/footer.astro"
import Player from "../components/player.astro"
import Notify from "../components/notify.astro"
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>Beat Saver Manager</title>
    </head>
    <body class="mx-auto flex min-h-screen w-full min-w-[320px] flex-col bg-slate-900 text-white">
        <Header />
        <main class="flex max-w-full flex-auto flex-col">
            <div class="container mx-auto space-y-10 px-4 lg:space-y-16 lg:px-8 xl:max-w-7xl">
                <slot />
            </div>
        </main>
        <Footer />
        <Player />
        <Notify />
    </body>
</html>

<style is:global>
    [x-cloak] { display: none !important; }
</style>

<script>
    import "../scripts/drive.js"
</script>
